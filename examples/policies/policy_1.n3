@prefix : <http://example.org/ns#> .
@prefix pol:  <https://www.example.org/ns/policy#> .
@prefix fno: <https://w3id.org/function/ontology#> .

:Rule1 a pol:Rule ;
    pol:body { 
        (_:Subject _:Object) 
            # When we have a create
            pol:when {
                _:Subject a :Create ;
                    :object _:Object .
            } ;
            # ... send it to the append log
            pol:then {
                [
                    a pol:PolicyExecution ;
                    pol:defines [
                        a fno:Execution ;
                        fno:executes :appendToLog ;
                        pol:subject _:Subject
                    ] 
                ]
            } ;
            # ... and remove all blind copies
            pol:then {
                [
                    a pol:PolicyExecution ;
                    pol:defines [
                        a fno:Execution ;
                        fno:executes :removeBlindCopies ;
                        pol:subject _:Subject
                    ] 
                ]
                
            } ;
            # ... and send a message to Jos
            pol:then {
                [
                    a pol:PolicyExecution ;
                    pol:defines [
                        a fno:Execution ;
                        fno:executes :sendMessage ;
                        pol:from <https://alice.net/card#me> ;
                        pol:to <https://somebody.net/profile/card#me> ;
                        pol:subject _:Subject ;
                        pol:message _:Object 
                    ] 
                ] 
            } .
    } .