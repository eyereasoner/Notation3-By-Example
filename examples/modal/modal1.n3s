@prefix : <urn:example:> .
@prefix log: <http://www.w3.org/2000/10/swap/log#> .

# necessary alice likes cats
($ $) log:onNegativeSurface {
    ($ $) log:onModalSurface {
        :Alice :likes :Cats .
    } .
} .

($ $) log:onQuestionSurface {
    # is it possible that alice likes cats?
    ($ $) log:onModalSurface {
        ($ $) log:onNegativeSurface {
            :Alice :likes :Cats .
        } .
    } .
    ($ $) log:onAnswerSurface {
        :modal1 :is true .
    } .
} .