@prefix : <urn:example:> .
@prefix log: <http://www.w3.org/2000/10/swap/log#> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .

# Policy 1 : a PublicAccess only gets to see the 
# foaf:name and foaf:email
(?Login ?S ?name ?email) log:onNegativeSurface {
    () log:onAccessSurface {
        ?Login a :PublicAccess .
    } .

    ?S a foaf:Person .
    ?S foaf:name ?name .
    ?S foaf:email ?email .

    () log:onNegativeSurface {
        # We write the triples on a result surface
        () log:onResultSurface {
            ?S foaf:name ?name {| log:ohyeah :Policy_1 |} .
            ?S foaf:email ?email {| log:ohyeah :Policy_1 |} . 
        } .
    } .
} {| :name :Policy_1 |} .
