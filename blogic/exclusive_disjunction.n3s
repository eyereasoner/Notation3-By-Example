@prefix : <urn:example:> .
@prefix t: <urn:logic:demo:> .
@prefix log: <http://www.w3.org/2000/10/swap/log#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .

:Alice :is :Racing .
:Bob :is :Racing .

# Make Bob the loser
:Alice a :Winner .

# Make Bob a winner
#(| log:onNegativeSurface {
#    :Alice a :Winner .
#} .

# This should fail: we can have only one winner
#:Bob a :Winner .

# An exclusive disjunction P <-/-> Q means that P is true or Q but not both
# This is same as
#     P <-> ~Q
# And is the same as
#     ( P -> ~Q ) AND (~Q -> P) AND ( ~P -> Q ) AND ( Q -> ~ P )

# [1]
(| log:onNegativeSurface {

    :Alice a :Winner .

    (| log:onNegativeSurface {
        (| log:onNegativeSurface {
            :Bob a :Winner .
        } .
    } .
}.

# [2]
(| log:onNegativeSurface {
    (| log:onNegativeSurface {
        :Bob a :Winner .
    } .

    (| log:onNegativeSurface {
        :Alice a :Winner .
    } .
}.

# [3] 
# Remark [2] and [3] are the same only with the order switched. One
# could keep only one of these rules
(| log:onNegativeSurface {
    (| log:onNegativeSurface {
        :Alice a :Winner .
    } .

    (| log:onNegativeSurface {
        :Bob a :Winner .
    } .
}.

# [4]
(| log:onNegativeSurface {
    :Bob a :Winner .

    (| log:onNegativeSurface {
        (| log:onNegativeSurface {
            :Alice a :Winner .
        } .
    } .
}.

# Test 
(| log:onNegativeSurface {
    :Alice a :Winner ;
        :is :Racing .
    :Bob :is :Racing .

    (| log:onNegativeSurface {
        :test :is true .
    } .
} .

(_:S _:O| log:onQuerySurface {
    _:S a _:O.
} .

(_:S _:O| log:onQuerySurface {
    _:S :is _:O.
} .

(| log:onQuerySurface {
    :test :is true .
} .
